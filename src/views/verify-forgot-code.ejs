<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot password</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
      .login-container {
        max-width: 1000px;
      }

    </style>
  </head>
  <script>
    $(document).ready(function() {
      $('#btnVerify').on('click', function() {
        let code = $('#code').val();
        $('#btnVerify').prop('disabled', true).text('Verifying...');
        
        if (!code) {
          setTimeout(() => {
            alert('Please enter the code');
            $('#btnVerify').prop('disabled', false).text("Verify");
          }, 1000);
          return;
        }

        $.ajax({
          url: `${window.location.origin}/verify-forgot-code`,
          method: 'POST',
          data: { code: code },
          success: function(response) {
            setTimeout(() => {
              if (response && response.EC === 1) {
                alert(response.EM);
                window.location.href = '/reset-password';
              } else {
                alert(response.EM);
              }
            }, 1000);
          },
          error: function(request, status, error) {
            setTimeout(() => {
              let errorEM = request?.responseText ?? '';
              if (errorEM) {
                let parsedError = JSON.parse(errorEM);
                alert(parsedError.EM);
              }
            }, 1000);
          },
          complete: function() {
            setTimeout(() => {
              $('#btnVerify').prop('disabled', false).text("Verify");
            }, 1000);
          }
        });
      });

      $('#resendCode').on('click', function(e) {
        e.preventDefault();

        // Disable the button to prevent multiple clicks
        $('#resendCode').prop('disabled', true).text('Resending...');

        $.ajax({
          url: `${window.location.origin}/resend-code`,
          method: 'POST',
          success: function(response) {
            setTimeout(() => {
              if (response && response.EC === 1) {
                alert('Code resent successfully');
              } else {
                alert(response.EM);
              }
            }, 1000);
          },
          error: function(request, status, error) {
            setTimeout(() => {
              let errorEM = request?.responseText ?? '';
              if (errorEM) {
                let parsedError = JSON.parse(errorEM);
                alert(parsedError.EM);
              }
            }, 1000);
          },
          complete: function() {
            setTimeout(() => {
              $('#resendCode').prop('disabled', false).text("Resend");
            }, 1000);
          }
        });
      });
    });
  </script>
  <body
    class="bg-light d-flex justify-content-center align-items-center vh-100"
  >
    <div
      class="container bg-white shadow-lg rounded-4 p-0 d-flex login-container"
    >
      
      <div class="w-full p-5 row">
        <!-- Left side -->
         <div class="col-12 col-sm-6">
            <a
            href="/login"
            class="text-secondary text-decoration-none d-flex align-items-center mb-4"
          >
            <img
              src="/images/back.png"
              alt="Back"
              class="me-2"
              style="width: 24px; height: 24px"
            />
            <span class="text-primary h5 fw-semibold">Back to login</span>
          </a>
          <h2 class="fw-bold mb-3">Verify code</h2>
          <p class="text-muted mb-4">
            An authentication code has been sent to your email.
          </p>

            <!-- Code -->
            <div class="mb-4">
                <label for="email" class="form-label text-secondary fw-semibold"
                >Code</label
              >
              <input
                type="text"
                id="code"
                class="form-control mb-3"
                placeholder="Enter the code you received"
              />
            </div>
            
            <p class="text-danger mb-4">
                Didn't receive a code? 
                <button id="resendCode" class="btn btn-link text-primary text-decoration-underline p-0" style="border: none; background: none;">Resend</button>
            </p>
              <button type="submit" id="btnVerify" class="btn btn-primary w-100 fw-semibold py-2">
                Verify
              </button>
         </div>
        

      <!-- Right side with image -->
      <div class="col-sm-6 col-12 d-none d-md-block">
        <img
          src="/images/LoginImage.jpg"
          alt="Login illustration"
          class="img-fluid h-100 object-fit-cover"
        />
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
