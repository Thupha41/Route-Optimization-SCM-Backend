<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SSO Login</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <style>
    body {
      font-family: "Poppins";
      font-size: 22px;
    }
    .bi-google {
      font-size: 30px;
      color: #dd4b39;
      cursor: pointer;
      padding: 0 7px;
    }
    .bi-facebook {
      font-size: 30px;
      color: #3b5998;
      cursor: pointer;
      padding: 0 7px;
    }
    /* .login-container {
      padding-top: 20px;
    } */
    .none-error-message {
      display: none;
    }
  </style>

  <script>
    $(document).ready(function () {
      $("#btn-login").on("click", function () {
        // const redirectURL = $('#redirectURL').val()
        $("#error-message").empty();
        $.ajax({
          type: "POST",
          url: `${window.location.origin}/login`,
          data: {
            username: $("#username").val(),
            password: $("#password").val(),
            redirectURL: $("#redirectURL").val(),
          },
          withCredentials: true,
          credentials: "include",
          success: function (response) {
            console.log(">>> check response", response);
            $("#error-message").addClass("none-error-message");
            const redirectURL = `${response.redirectURL}/code?ssoToken=${response.code}`;
            window.location.href = redirectURL;
          },
          error: function (request, status, error) {
            $("#password").val("");
            $("#error-message").removeClass("none-error-message");
            $("#error-message").append(request.responseText);
            console.log(request.responseText);
          },
        });
      });
      $(".btn-back").on("click", function () {
        window.location.href = "<%= process.env.REACT_PATH_SSO %>";
      });
      $("#iconGoogle").on("click", function () {
        localStorage.removeItem("clientURL");
        localStorage.setItem("clientURL", $("#redirectURL").val());
        window.location.href = "/auth/google";
      });
      const password = document.getElementById("password");
      password.addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
          event.preventDefault();
          document.getElementById("btn-login").click();
        }
      });
    });
  </script>
  <body>
    <input type="hidden" id="redirectURL" value="<%= redirectURL %>" />
    <div class="container bg-light min-vh-100 d-flex align-items-center">
      <div class="row w-100">
        <div class="col-md-6 mx-auto">
          <div class="card shadow">
            <div class="card-body">
              <button class="btn btn-link text-primary mb-3 btn-back">
                <img
                  src="/images/back.png"
                  alt="Back"
                  class="me-2"
                  style="width: 24px"
                />
                Back
              </button>

              <h2 class="card-title mb-4">Login</h2>
              <p class="text-muted mb-4">
                Login to access your EffiRoute account
              </p>

              <form>
                <div
                  class="alert alert-danger my-1 none-error-message"
                  role="alert"
                  id="error-message"
                ></div>
                <div class="mb-3">
                  <label htmlFor="email" class="form-label">Email</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                    placeholder="Please enter your email address"
                  />
                </div>

                <div class="mb-3">
                  <label htmlFor="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Please enter your password"
                  />
                </div>

                <div
                  class="d-flex justify-content-center align-items-center mb-4"
                >
                  <a href="/forgot-password" class="text-danger"
                    >Forgot Password</a
                  >
                </div>

                <button
                  id="btn-login"
                  type="button"
                  class="btn btn-primary w-100 mb-4"
                >
                  Login
                </button>
              </form>

              <div class="text-center">
                <p class="text-muted mb-3">Or login with</p>
                <div class="d-flex justify-content-center">
                  <a href="/auth/google">
                    <i
                      id="iconGoogle"
                      class="bi bi-google"
                      title="Login with Google"
                    ></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 d-none d-md-block">
          <img
            src="/images/LoginImage.jpg"
            alt="Login illustration"
            class="img-fluid h-100 object-fit-cover"
          />
        </div>
      </div>
    </div>
  </body>
</html>
